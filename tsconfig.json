{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "./",
		"allowSyntheticDefaultImports": true
	}
}
